<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/profile_user_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="user_name"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/profile_plus_iv"/>

    <ImageView
        android:id="@+id/profile_plus_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_plus"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@id/profile_user_name_tv"
        app:layout_constraintBottom_toBottomOf="@id/profile_user_name_tv"
        app:layout_constraintEnd_toStartOf="@id/profile_hamburger_iv"/>

    <ImageView
        android:id="@+id/profile_hamburger_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_hamburger"
        android:padding="5dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@id/profile_user_name_tv"
        app:layout_constraintBottom_toBottomOf="@id/profile_user_name_tv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/profile_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_profile_default"
        app:layout_constraintTop_toBottomOf="@id/profile_user_name_tv"
        app:layout_constraintStart_toStartOf="@id/profile_user_name_tv"/>

    <LinearLayout
        android:id="@+id/profile_static_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toTopOf="@id/profile_iv"
        app:layout_constraintBottom_toBottomOf="@id/profile_iv"
        app:layout_constraintStart_toEndOf="@id/profile_iv"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/profile_post_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/profile_post_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/profile_post_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="게시물"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="normal"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_follower_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/profile_follower_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/profile_follower_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="팔로워"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="normal"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_following_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/profile_following_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/profile_following_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="팔로잉"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="normal"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/profile_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="김이름"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/profile_iv"
        app:layout_constraintTop_toBottomOf="@id/profile_iv"/>

    <TextView
        android:id="@+id/profile_introduction_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="소개"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/profile_iv"
        app:layout_constraintTop_toBottomOf="@id/profile_name_tv"/>

    <LinearLayout
        android:id="@+id/profile_button_ll"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@id/profile_introduction_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/profile_edit_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_default_gray_btn"
            android:stateListAnimator="@null"
            android:text="프로필 편집"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/profile_share_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_default_gray_btn"
            android:stateListAnimator="@null"
            android:text="프로필 공유"/>
        <ImageView
            android:id="@+id/profile_recommend_follow_iv"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_recommend_friend"
            android:background="@drawable/bg_default_gray_btn"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_recommend_follow_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/profile_button_ll"
        app:layout_constraintEnd_toEndOf="@id/profile_button_ll"
        app:layout_constraintTop_toBottomOf="@id/profile_button_ll">

        <TextView
            android:id="@+id/profile_look_user_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="사람 찾아보기"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/profile_look_user_all_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:paddingVertical="4dp"
            android:text="모두 보기"
            android:textSize="14sp"
            android:textColor="@color/default_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/profile_recommend_follow_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:scrollbars="none"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@id/profile_look_user_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_recommend_follow"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_story_highlight_cl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/profile_button_ll"
        app:layout_constraintEnd_toEndOf="@id/profile_button_ll"
        app:layout_constraintTop_toBottomOf="@id/profile_recommend_follow_cl">
        <TextView
            android:id="@+id/profile_story_highlight_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="스토리 하이라이트"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:id="@+id/profile_story_highlight_arrow_iv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:padding="2dp"
            android:src="@drawable/ic_arrow_bottom"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="@id/profile_story_highlight_tv"
            app:layout_constraintBottom_toBottomOf="@id/profile_story_highlight_tv"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/profile_tab_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/profile_story_highlight_cl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="2dp"
                android:src="@drawable/ic_postgrid"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_myinfo_tag"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="#C4C4C4"/>
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>