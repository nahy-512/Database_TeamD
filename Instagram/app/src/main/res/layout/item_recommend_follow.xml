<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="4dp"
    android:padding="12dp"
    android:background="@drawable/bg_recommend_follow">

    <ImageView
        android:id="@+id/item_follow_recommend_close_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="-5dp"
        android:padding="5dp"
        android:backgroundTint="@color/dark_gray"
        android:src="@drawable/ic_profile_update_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/item_follow_recommend_profile_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_profile_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/item_follow_recommend_text_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/item_follow_recommend_profile_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/item_follow_recommend_user_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="user_name"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/item_follow_recommend_desc_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="64.5h_님 외 2명이 팔로우합니다."
            android:textAlignment="center"
            android:textColor="@color/dark_gray"
            android:textSize="12sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/item_follow_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingVertical="5dp"
        android:backgroundTint="@color/default_blue"
        android:background="@drawable/bg_button_background"
        android:text="팔로우"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/item_follow_recommend_text_ll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>