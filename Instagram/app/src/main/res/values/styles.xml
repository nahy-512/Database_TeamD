<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 탭바 -->
    <style name="tab_text_appearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="profile_edit_info_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="profile_edit_info_et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
        <item name="android:backgroundTint">@color/default_gray</item>
    </style>

    <style name="default_underline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/default_gray</item>
    </style>

    <style name="profile_edit_button_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16sp</item>
        <item name="android:paddingVertical">16sp</item>
        <item name="android:textColor">@color/default_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="search_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:background">@drawable/bg_button_background</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:drawableStart">@drawable/ic_search_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textCursorDrawable">@color/dark_gray</item>
        <item name="android:textColorHint">@color/dark_gray</item>
    </style>
</resources>