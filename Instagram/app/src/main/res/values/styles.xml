<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="profile_edit_info_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="profile_edit_info_et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
        <item name="android:backgroundTint">@color/default_gray</item>
    </style>

    <style name="default_underline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/default_gray</item>
    </style>

    <style name="profile_edit_button_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16sp</item>
        <item name="android:paddingVertical">16sp</item>
        <item name="android:textColor">@color/default_blue</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>